    "gh-pages": "^6.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "vite-plugin-checker": "^0.11.0"
  }
